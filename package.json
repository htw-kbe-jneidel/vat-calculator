  },
  "engines": {
    "node": ">=16"
  },
  "scripts": {
    "start": "nodemon dist/app.js --ignore src/ --ignore test/ --trace-sync-io",
    "test": "jest --coverage",
    "build": "npm run build-ts",
    "build-ts": "tsc",
    "build-webpack": "webpack",
    "watch": "concurrently -k -n \"ðŸ”¨,ðŸš€\" \"npm run watch-ts\" \"npm run watch-test\" --prefix name",
    "watch-ts": "tsc -w",
    "watch-test": "jest --watch",
    "start-prod": "node -r dotenv/config dist/app.js dotenv_config_path=.env",
    "lint": "eslint --fix -c ~/.config/eslint/eslintrc-ts --ext .ts --parser-options \"{ 'ecmaVersion': 10, 'ecmaFeatures': { 'impliedStrict': true }, project: ./tsconfig.json }\" src"
  },
  "dependencies": {
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "helmet": "^4.6.0",
    "mysql2": "^2.3.3",
    "sequelize": "^6.12.0-alpha.1"
  },
  "devDependencies": {
    "@types/helmet": "^4.0.0",
    "@types/jest": "^27.0.3",
    "@types/node": "^16.11.9",
    "jest": "^27.3.1",
    "ts-jest": "^27.0.7",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.2"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/?*.test.ts"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    }
  }
